class Solution {
public:
    string intToRoman(int num) {
        vector<pair<int, string>> dabba;
        dabba = {
            {1000,"M"}, 
            {900, "CM"},
            {500, "D"},
            {400, "CD"},
            {100, "C"},
            {90, "XC"},
            {50, "L"},
            {40, "XL"},
            {10, "X"},
            {9, "IX"},
            {5, "V"},
            {4,"IV"},
            {1, "I"}
        };
        string ans = "";
        
        for(int i=0; i<dabba.size(); i++){

            while(num >= dabba[i].first){
                
                ans = ans + dabba[i].second;
                num = num - dabba[i].first;
            }
        }
        return ans;


    }
};
