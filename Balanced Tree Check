Yahan har recursion se 2 cheezein return ho rahi hain:
first → diameter of that subtree
second → height of that subtree

class Solution {
  public:
    pair<int, int> dimaters(Node* root){
        
        if(root == NULL){
            pair<int,int>p = make_pair(0, 0);
            return p;
        }
        
        pair<int, int> left = dimaters(root->left);
        pair<int, int> right = dimaters(root->right);
        
        int op1 = left.first;
        int op2 = right.first;
        int op3 = left.second + right.second;
        
        pair<int, int> ans;
        ans.first = max({op1, op2, op3}); 
        ans.second = max(left.second, right.second) + 1;
        return ans;
    }
    int diameter(Node* root) {
        return dimaters(root).first;
        
    }
};
