class Solution {
public:
    int minDepth(TreeNode* root) {

        if(root == NULL){
            return 0;
        }

        if(root->left == NULL && root->right == NULL){
            return 1;
        }

        int left = root->left != NULL ? minDepth(root->left) : INT_MAX;
        int right = root->right != NULL ? minDepth(root->right) : INT_MAX;

        int ans =  min(left , right) + 1;

        return ans;
    }
};
