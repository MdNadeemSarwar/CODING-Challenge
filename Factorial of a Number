#include <iostream>
using namespace std;
int solve(int n){
  if(n == 0){
    return 1;
  }
  int chotaproblem = solve(n-1);
  int badaproblem = n * chotaproblem;
  return badaproblem;
}
int main() {
  int n;
  cin>>n;
  
  if(n==0){
    cout<<"1";
  }
  else if(n < 0){
    cout<<"Error";
  }
  else{
    cout<<solve(n);
  }
    return 0;
}

--------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n;
    cin>>n;
    int ans = 1;

    for(int i=1; i<=n; i++){
      ans = ans*i;
    }

    if (n < 0) {
      cout << "Error";
    }
    else if(n == 0){
      cout<< "1";
    }
    else{
      cout<< ans;
    }
    return 0;
}
